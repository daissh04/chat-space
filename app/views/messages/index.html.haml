.header
.chat-side
  = render "shared/side_bar"
.chat-main
  .chat-main__main-header
    .chat-main__main-header__left-box
      %h.chat-main__main-header__left-box__group-name チームC
      %li.chat-main__main-header__left-box__member Member:
      %li.chat-main__main-header__left-box__member-list okapon daisuke
    = link_to edit_group_path(current_user) do
      .chat-main__main-header__btn Edit
  .chat-main__message
    .chat-main__message__box
      %p.chat-main__message__box__user-name daisuke
      %p.chat-main__message__box__date 2019/09/15(Sun) 20:45:49
      %p.chat-main__message__box__text こんにちは！
  .chat-main__form
    .chat-main__form__new-message
      = form_for [@group, @message] do |f|
        = f.text_field :content, class: 'chat-main__form__new-message__text', placeholder: 'type a message'
        .chat-main__form__new-message__upload-label
        = f.label :image do
          = fa_icon 'picture-o', class: 'chat-main__form__new-message__icon'
          = f.file_field :image, class: 'chat-main__form__new-message__file-send'
        = f.submit 'Send', class: 'chat-main__form__new-message__btn'